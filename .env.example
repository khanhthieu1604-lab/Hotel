# =================================================================
# KThiuu Hotel - Environment Configuration Template
# =================================================================
# SECURITY WARNING: NEVER commit your actual .env file to version control!
# This is a template file. Copy to .env and fill in your actual values.
# =================================================================

# --- APPLICATION ---
APP_NAME="KThiuu Hotel"
APP_ENV=local
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=false  # CRITICAL: Set to false in production!
APP_URL=http://localhost:8001

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# --- LOGGING ---
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug  # Use 'error' or 'warning' in production

# --- DATABASE ---
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite  # Relative path (more secure)

# For MySQL (production):
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=kthiuu_hotel
# DB_USERNAME=your_db_user
# DB_PASSWORD=your_secure_db_password

# --- SESSION ---
SESSION_DRIVER=database
SESSION_LIFETIME=30  # Minutes - reduced for security
SESSION_ENCRYPT=true  # Encrypt session data
SESSION_PATH=/
SESSION_DOMAIN=null

# --- CACHE & QUEUE ---
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# --- REDIS (Optional) ---
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MEMCACHED_HOST=127.0.0.1

# --- MAIL CONFIGURATION ---
# Development (Mailhog):
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="bookings@thiuu-hotel.com"
MAIL_FROM_NAME="${APP_NAME}"

# Production (Use transactional email service):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.postmarkapp.com
# MAIL_PORT=587
# MAIL_USERNAME=your_postmark_token
# MAIL_PASSWORD=your_postmark_token
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="${APP_NAME}"

# --- AWS (If using S3 for storage) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# --- PAYMENT GATEWAY (To be implemented) ---
# VNPAY_TMN_CODE=your_vnpay_terminal_code
# VNPAY_HASH_SECRET=your_vnpay_hash_secret
# VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
# VNPAY_RETURN_URL="${APP_URL}/payment/vnpay/return"

# --- VITE ---
VITE_APP_NAME="${APP_NAME}"
